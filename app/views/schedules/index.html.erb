<p id="notice"><%= notice %></p>

<h1>Schedules</h1>

<table>
  <thead>
    <tr>
      <th>Schedule</th>
      <th>Schedule title</th>
      <th>Start</th>
      <th>End</th>
      <th>Facility type</th>
      <th>Room name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @schedules.each do |schedule| %>
      <tr>
        <td><%= schedule.schedule_id %></td>
        <td><%= schedule.schedule_title %></td>
        <td><%= schedule.start %></td>
        <td><%= schedule.end %></td>
        <td><%= schedule.facility_type %></td>
        <td><%= schedule.room_name %></td>
        <td><%= link_to 'Show', schedule %></td>
        <td><%= link_to 'Edit', edit_schedule_path(schedule) %></td>
        <td><%= link_to 'Destroy', schedule, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Schedule', new_schedule_path %>


<table>
<thead>
<tr>
<th>Start Date</th>
<th>End Date</th>
<th>Book the slot</th>
</tr>
</thead>

<tbody>
<% @schedules.each do |schedule| %>
   <% unless schedule.schedule_title == 'Booked' %>

     <% @rooms.each do |room| %>
	<tr>
	<% unless schedule.room_name != room.room_id %> 
	<td><%= schedule.start %></td>
	<td><%= schedule.end %></td>
	<td><%= room.room_name %></td>
	<td><%= radio_button :schedule_id, schedule.id, required: true %> <i>Book this Facility</i></td>
        <% end %>
	</tr>
     <% end %>
  <% end %>
<% end %>
</tbody>

</table>

