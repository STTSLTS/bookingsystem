<p id="notice"><%= notice %></p>

<h1>Bookings</h1>

<table>
  <thead>
    <tr>
      <th>Status</th>
      <th>Title</th>
      <th>User</th>
      <th>Schedule</th>
      <th>Start</th>
      <th>Room</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bookings.each do |booking| %>
      <tr>
        <td><%= booking.status %></td>
        <td><%= booking.title %></td>
        <td><%= booking.user_id %></td>
        <td><%= booking.schedule_id %></td>
        <td><%= booking.start %></td>
        <td><%= booking.room_id %></td>
        <td><%= link_to 'Show', booking %></td>
        <td><%= link_to 'Edit', edit_booking_path(booking) %></td>
        <td><%= link_to 'Destroy', booking, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Booking', new_booking_path %>



<br>
<%= form_with(model: @booking) do |form| %>

<div>
<table>
<thead>
<tr>
<th>Start Date</th>
<th>End Date</th>
<th>Book the slot</th>
</tr>
</thead>

<tbody>
<% @schedules.each do |schedule| %>
   <% unless schedule.schedule_title == 'Booked' %>

     <% @rooms.each do |room| %>
        <tr>
        <% unless schedule.room_name != room.room_id %>
        
	<td><%= schedule.start %></td>
        <td><%= schedule.end %></td>
        <td><%= room.room_name %></td>
        <td><%= radio_button :schedule_id, schedule.schedule_id, required: true %> <i>Book this Facility</i></td>
        <% end %>
        </tr>
     <% end %>
  <% end %>
<% end %>
</tbody>

</table>
</div>
  <div class="actions">
    <%= form.submit %>
  </div>

<% end %>
